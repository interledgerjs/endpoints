{
  "name": "@interledger/endpoints",
  "version": "0.0.0-beta.1",
  "description": "Endpoints for connecting Interledger services to exchange ILP packets",
  "types": "build/index.d.ts",
  "files": [
    "build/**/*.js",
    "build/**/*.js.map",
    "build/**/*.d.ts",
    "build/doc"
  ],
  "scripts": {
    "clean": "rm -Rf .nyc_output && rm -Rf coverage && rm -Rf build ",
    "build": "tsc",
    "lint": "tslint --project .",
    "test": "nyc mocha --colors --require ts-node/register --ui mocha-typescript --require source-map-support/register test/**/*.test.ts",
    "doc": "typedoc --options typedoc.js src/index.ts",
    "codecov": "codecov",
    "preversion": "npm run lint && npm test",
    "prepublishOnly": "npm run lint && npm test && npm run doc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/interledgerjs/endpoints.git"
  },
  "author": "Adrian Hope-Bailie <adrian@hopebailie.com>",
  "keywords": [
    "interledger",
    "ilp",
    "packet"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/interledgerjs/endpoints/issues"
  },
  "homepage": "https://github.com/interledgerjs/endpoints#readme",
  "dependencies": {
    "ilp-packet": "3.0.8",
    "oer-utils": "4.0.0"
  },
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/chai-as-promised": "7.1.0",
    "@types/mocha": "5.2.6",
    "@types/node": "10.12.29",
    "@types/ws": "6.0.1",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "codecov": "3.2.0",
    "mocha": "5.2.0",
    "mocha-typescript": "1.1.17",
    "nyc": "13.3.0",
    "source-map-support": "0.5.10",
    "ts-node": "7.0.1",
    "tslint": "5.13.1",
    "tslint-config-standard": "8.0.1",
    "typedoc": "0.14.2",
    "typescript": "3.3.3333",
    "ws": "6.1.4"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "test"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  }
}
